<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget">
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CustomRecyclerView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Widget.CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background_secondary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/color_underline_transparent</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="boxCornerRadiusTopStart">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/custom_text_input_layout_corner_radius</item>
    </style>

    <style name="Widget.CustomTextInputEditText">
        <item name="android:textSize">@dimen/custom_text_input_edit_text_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/custom_text_input_edit_text_padding_vertical
        </item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Widget.CustomSubmitMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/custom_submit_button_corner_radius</item>
        <item name="backgroundTint">@color/color_switchable_button</item>
        <item name="android:enabled">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">@dimen/custom_submit_button_padding_vertical</item>
        <item name="android:paddingHorizontal">22dp</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/custom_submit_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.CustomTextInputLayoutLabel">
        <item name="android:textSize">@dimen/custom_text_input_layout_label_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.PhoneVerificationSendCodeAgainText">
        <item name="android:enabled">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_switchable_text</item>
    </style>

    <style name="Widget.FavoriteCheckBox">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.ProductCardItemText">
        <item name="android:textSize">@dimen/product_card_item_font_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.HeaderText">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

</resources>