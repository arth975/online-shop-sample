<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget">
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.NotOverscrollable">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Widget.CustomImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FontSemiBold">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.CustomRecyclerView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Widget.CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/background_secondary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/color_underline_transparent</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="boxCornerRadiusTopStart">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/custom_text_input_layout_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/custom_text_input_layout_corner_radius</item>
    </style>

    <style name="Widget.CustomTextInputEditText">
        <item name="android:textSize">@dimen/custom_text_input_edit_text_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">@dimen/custom_text_input_edit_text_padding_vertical
        </item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Widget.CustomSubmitMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/custom_submit_button_corner_radius</item>
        <item name="backgroundTint">@color/color_switchable_button</item>
        <item name="android:enabled">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">@dimen/custom_submit_button_padding_vertical</item>
        <item name="android:paddingHorizontal">22dp</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/custom_submit_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.CustomTextInputLayoutLabel">
        <item name="android:textSize">@dimen/custom_text_input_layout_label_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.PhoneVerificationSendCodeAgainText">
        <item name="android:enabled">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/color_switchable_text</item>
    </style>

    <style name="Widget.FavoriteCheckBox">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.ProductCardItemText">
        <item name="android:textSize">@dimen/product_card_item_font_size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Widget.HeaderText">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Widget.CustomIconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/background_secondary</item>
        <item name="cornerRadius">@dimen/toolbar_catalog_widget_corner_radius</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Widget.CatalogTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="iconPadding">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>
    </style>

    <style name="Widget.CatalogTextInputLayout.Rounded">
        <item name="boxCornerRadiusTopEnd">@dimen/toolbar_catalog_widget_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/toolbar_catalog_widget_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/toolbar_catalog_widget_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/toolbar_catalog_widget_corner_radius</item>
    </style>

    <style name="Widget.CatalogTextInputEditText">
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.CustomRecyclerView.Horizontal">
        <item name="android:paddingStart">@dimen/common_margin_horizontal</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Widget.CustomCollapsingToolbar">
        <item name="layout_scrollFlags">scroll|snap|exitUntilCollapsed</item>
        <item name="scrimAnimationDuration">150</item>
    </style>

    <style name="Widget.SingleProduct"/>
    <style name="Widget.SingleProduct.SemiBoldText" parent="@style/FontSemiBold">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">@dimen/single_product_label_text_size</item>
    </style>

    <style name="Widget.SingleProduct.NormalText">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">@dimen/single_product_text_size</item>
    </style>

    <style name="Widget.CustomImageButton.Back">
        <item name="srcCompat">@drawable/ic_arrow_left</item>
        <item name="android:background">@drawable/bg_back_button</item>
    </style>

    <style name="Widget.ProfileTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="Widget.ProfileButtonWithIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

</resources>